  "paths": {
    "/data/timeseries": {
      "get": {
        "tags": [
          "data"
        ],
        "summary": "Get timeseries data",
        "description": "Returns the timeseries data for the given timeseries identifiers.",
        "operationId": "getTimeseriesRoute",
        "security": [
          {
            "HTTPBearer": []
          }
        ],
        "parameters": [
          {
            "name": "timeseriesId",
            "in": "query",
            "required": true,
            "schema": {
              "type": "array",
              "items": {
                "type": "integer"
              },
              "description": "One ore more timeseries identifiers to get data for.",
              "title": "Timeseriesid"
            },
            "description": "One ore more timeseries identifiers to get data for."
          },
          {
            "name": "startAtUtc",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date-time",
              "description": "The start of range. Must be timezone aware.",
              "title": "Startatutc"
            },
            "description": "The start of range. Must be timezone aware."
          },
          {
            "name": "endAtUtc",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date-time",
              "description": "The end of the range. Must be timezone aware.",
              "title": "Endatutc"
            },
            "description": "The end of the range. Must be timezone aware."
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/TimeseriesData"
                  },
                  "title": "Response Gettimeseriesroute"
                }
              }
            }
          },
          "404": {
            "description": "Timeseries not found."
          },
          "400": {
            "description": "Range was invalid or more than 30 days, 0:00:00"
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
